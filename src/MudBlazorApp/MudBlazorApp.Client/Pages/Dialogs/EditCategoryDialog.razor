@using Api.Models.Dto.Categories

<MudDialog>
    <TitleContent>
        <MudText Typo="Typo.h6">Edit category</MudText>
    </TitleContent>

    <DialogContent>
        <MudTextField @bind-Value="Name"
                      Label="Name"
                      Required="true"
                      RequiredError="Name is required"/>

        <MudTextField @bind-Value="Description"
                      Label="Description"/>

        <MudTextField @bind-Value="CategoryColor"
                      Label="Color"
                      Required="true"
                      RequiredError="Color is required"/>

    </DialogContent>

    <DialogActions>
        <MudButton Variant="Variant.Text" 
                   Color="Color.Secondary" 
                   OnClick="@Cancel">Cancel</MudButton>
        <MudButton Variant="Variant.Filled" 
                   Color="Color.Secondary" 
                   OnClick="@Submit">Submit</MudButton>
    </DialogActions>
</MudDialog>

@code {
    [CascadingParameter] IMudDialogInstance MudDialog { get; set; }

    [Parameter] public string Name { get; set; } = "";
    [Parameter] public string Description { get; set; } = "";
    [Parameter] public string CategoryColor { get; set; } = "";
    
    void Cancel() => MudDialog.Cancel();

    void Submit()
    {
        if (string.IsNullOrWhiteSpace(Name) || string.IsNullOrWhiteSpace(CategoryColor))
        {
            // Handle validation error
            return;
        }

        MudDialog.Close(DialogResult.Ok(new CreateCategoryDto(Name, Description, CategoryColor)));
    }
}