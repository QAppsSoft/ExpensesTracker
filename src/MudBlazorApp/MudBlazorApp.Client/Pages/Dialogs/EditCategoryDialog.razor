@using Api.Models.Dto.Categories

<MudDialog>
    <TitleContent>
        <MudText Typo="Typo.h6">Edit category</MudText>
    </TitleContent>

    <DialogContent>
        
        <MudTextField @bind-Value="Name"
                      Label="Name"
                      Required="true"
                      RequiredError="Name is required"
                      Class="pt-4"/>

        <MudTextField @bind-Value="Description"
                      Label="Description"
                      Class="pt-4"/>

        <MudTextField @bind-Value="CategoryColor"
                      Label="Color"
                      Required="true"
                      RequiredError="Color is required"
                      Class="pt-4"/>

    </DialogContent>

    <DialogActions>
        <MudButton Variant="Variant.Text" 
                   Color="Color.Secondary" 
                   OnClick="@Cancel">Cancel</MudButton>
        <MudButton Variant="Variant.Filled" 
                   Color="Color.Secondary" 
                   OnClick="@Submit">Submit</MudButton>
    </DialogActions>
</MudDialog>

@code {
    [CascadingParameter] IMudDialogInstance MudDialog { get; set; }
    
    public string Name { get; set; } = "";
    public string? Description { get; set; }
    public string CategoryColor { get; set; } = "";
    
    [Parameter] public CategoryDto OldCategory { get; set; }

    protected override void OnInitialized()
    {
        Name = OldCategory.Name;
        Description = OldCategory.Description;
        CategoryColor = OldCategory.Color;
    }

    void Cancel() => MudDialog.Cancel();

    void Submit()
    {
        if (string.IsNullOrWhiteSpace(Name) || string.IsNullOrWhiteSpace(CategoryColor))
        {
            // Handle validation error
            return;
        }

        MudDialog.Close(DialogResult.Ok(new CategoryDto(OldCategory.Id, Name, Description, CategoryColor)));
    }
}