<MudDialog>
    <TitleContent>
        <MudText Typo="Typo.h6">Add new category</MudText>
    </TitleContent>

    <DialogContent>
        <MudTextField @bind-Value="Name"
                      Label="Name"
                      Required="true"
                      RequiredError="Name is required"/>

        <MudTextField @bind-Value="Description"
                      Label="Description"/>

        <MudColorPicker @bind-Text="CategoryColor"
                        Class="mud-width-full"
                        ShowAlpha="false"
                        Label="Color"
                        Required="true"
                        RequiredError="Color is required"
                        ColorPickerView="ColorPickerView.GridCompact"/>

        <div class="mud-width-full rounded py-4" style="@($"background-color:{CategoryColor};")"></div>

    </DialogContent>

    <DialogActions>
        <MudButton Variant="Variant.Text" 
                   Color="Color.Secondary" 
                   OnClick="@Cancel">Cancel</MudButton>
        <MudButton Variant="Variant.Filled" 
                   Color="Color.Secondary" 
                   OnClick="@Submit">Submit</MudButton>
    </DialogActions>
</MudDialog>